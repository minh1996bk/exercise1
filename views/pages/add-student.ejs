<h3>Hệ thống quản lý sinh viên</h3>
<hr>
<h4>Thêm mới sinh viên</h4>
<p><a href="/students">Trở về danh sách sinh viên</a></p>
<div>
    <form action="/student" method="POST">
        <input type="text" name="mssv" placeholder="Nhập vào mssv" required>
        <%if(locals.mssvError) {%>
            <p><%=mssvError%></p>
        <%}%>
        <input type="text" name="name" placeholder="Nhập vào tên sinh viên" required>
        <%if(locals.nameError) {%>
            <p><%=nameError%></p>
        <%}%>
        <input type="text" name="dateOfBirth" placeholder="Nhập vào ngày sinh" required>
        <%if(locals.dateOfBirthError) {%>
            <p><%=dateOfBirthError%></p>
        <%}%>
        <input type="text" name="gender" placeholder="Nhập vào giới tính" required>
        <%if(locals.genderError) {%>
            <p><%=genderError%></p>
        <%}%>
        <input type="text" name="address" placeholder="Nhập vào địa chỉ" required>
        <%if(locals.addressError) {%>
            <p><%=addressError%></p>
        <%}%>
        <input type="submit" value="Nhập">
    </form>
</div>