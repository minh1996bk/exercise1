<!DOCTYPE>
<html>
<head>
<meta charset="utf-8" />
<title>Sửa sinh viên </title>
<link rel="stylesheet" type="text/css" href="style.css" />
<link href='http://fonts.googleapis.com/css?family=Belgrano' rel='stylesheet' type='text/css'>

</head>
<body>
	<div class="title"><h1>Hệ thống quản lý sinh viên</h1><hr></div>
<div id="loginpanelwrap">
	<h3 class="ds"><a href="/students">Trở về danh sách sinh viên</a></h3>
	<%if(typeof success !== 'undefined' && success == true) {%>
		<h4 id="thongbao">Sửa thành công !</h4>
	<%}%>
  	
	<div class="loginheader">

    <div class="logintitle">Sửa sinh viên </div>
    </div>
     
    <div class="loginform">
        <form action="/update-student" method="post">
        
       		 <div class="loginform_row">
       			<label>Mã sinh viên:</label><span></span>
       			<input type="text"  class="loginform_input" name="mssv"  id="masv" value="<%=student.mssv%>" readonly>
		       
       			<div id="error" class="er">
					    <% if(typeof errors !== 'undefined' && errors.mssvError) {%>
							<%=errors.mssvError%>
						<%}%>

				</div>
       		 </div>
       		 <div class="loginform_row">
       			 <label>Họ và tên:</label><span></span>
       			 <input type="text" class="loginform_input" name="name" value="<%=student.name%>" id="txt_name">
		        
       			 <div id="errorht" class="er">
						<%if(typeof errors !== 'undefined' && errors.nameError) {%>
							<%=errors.nameError%>
						<%}%>

				</div>
       		 </div>
       		 <div class="loginform_row">
       			 <label>Ngày sinh:</label><span></span>
       			 <input type="date" name="dateOfBirth" value="<%=student.dateOfBirth%>" id="txt_ns" class="loginform_input">
		       
					<div id="errorns" class="er">
							<%if(typeof errors !== 'undefined' && errors.dateOfBirthError) {%>
								<%=errors.dateOfBirthError%>
							 <%}%>
					</div>
       		 </div>
       		 <div class="loginform_row">
       			 <label>Giới tính:</label>
       			  <%if(student.gender === 'Nam'){%>
	            <!-- <label for="gender">Nam</label> -->
	            <input type="radio" name="gender" value="Nam" checked>Nam
	            <!-- <label for="gender">Nữ</label> -->
	            <input type="radio" name="gender" value="Nu">Nữ
	        <%} else {%>
	            <!-- <label for="gender">Nam</label> -->
	            <input type="radio" name="gender" value="Nam">Nam
	            <!-- <label for="gender">Nữ</label> -->
	            <input type="radio" name="gender" value="Nu" checked>Nữ
	        <%}%>
	       			
       			<div class="er">
					    <%if(typeof errors !== 'undefined' && errors.genderError) {%>
							<%=errors.genderError%>
						 <%}%>

				</div>
       		 </div>
       		 <div class="loginform_row">
       			 <label>Địa chỉ:</label><span></span>
       			
       			  <input type="text" class="loginform_input"  id="txt_dc" name="address" value="<%=student.address%>" >
		       
       			<div id="errordc" class="er">
					    <%if(typeof errors !== 'undefined' && errors.addressError) {%>
							<p><%=errors.addressError%></p>
						<%}%>

				</div>
       		 </div>
       		
       		 <div class="loginform_row">
       			 <input type="submit" class="loginform_submit" value="Sửa" onclick="return check();" />


						<input  style="float: none;margin-left: 296px;" type="submit" class="loginform_submit" value="Xóa" name="btnDelete">
						
			</div>
       		 </form>
        <div class="clear"></div>
        </form>
       

    </div>
 

</div>
<script type="text/javascript" src="js.js"></script>

    	
</body>
</html>